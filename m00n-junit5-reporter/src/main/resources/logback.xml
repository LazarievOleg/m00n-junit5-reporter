<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- File appender for M00n Reporter logs -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>test-results/m00n-reporter.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- M00n Reporter logging -->
    <logger name="com.m00nreport.reporter" level="INFO" additivity="true">
        <appender-ref ref="FILE"/>
    </logger>
    
    <!-- Playwright logging (reduced to avoid noise) -->
    <logger name="com.microsoft.playwright" level="WARN"/>
    
    <!-- OkHttp logging -->
    <logger name="okhttp3" level="WARN"/>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
    
</configuration>
