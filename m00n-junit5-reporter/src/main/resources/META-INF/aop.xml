<?xml version="1.0" encoding="UTF-8"?>
<!--
  M00n Report - Bundled AspectJ Configuration
  
  This file is automatically included in the reporter JAR.
  Users don't need to create their own aop.xml - just add AspectJ dependencies
  and the -javaagent JVM argument.
-->
<aspectj>
    <aspects>
        <aspect name="com.m00nreport.reporter.M00nStepAspect"/>
    </aspects>
    
    <weaver>
        <!-- Weave ALL user packages - @Step works anywhere -->
        <include within="*..*"/>
        
        <!-- Exclude JDK internals -->
        <exclude within="java..*"/>
        <exclude within="javax..*"/>
        <exclude within="jdk..*"/>
        <exclude within="sun..*"/>
        <exclude within="com.sun..*"/>
        
        <!-- Exclude common frameworks for performance -->
        <exclude within="org.junit..*"/>
        <exclude within="org.aspectj..*"/>
        <exclude within="org.slf4j..*"/>
        <exclude within="org.apache..*"/>
        <exclude within="org.springframework..*"/>
        <exclude within="com.microsoft.playwright..*"/>
        <exclude within="com.fasterxml..*"/>
        <exclude within="com.google..*"/>
        <exclude within="io.netty..*"/>
        <exclude within="lombok..*"/>
        
        <!-- Exclude ReportPortal if both are used -->
        <exclude within="com.epam.reportportal..*"/>
    </weaver>
</aspectj>
